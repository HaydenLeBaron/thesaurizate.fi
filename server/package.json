{
  "name": "thesaurum-server",
  "version": "1.0.0",
  "description": "Express.js TypeScript server for thesaurum-in-caelo.fi",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:migrate": "node-pg-migrate up",
    "db:migrate:down": "node-pg-migrate down",
    "db:migrate:create": "node-pg-migrate create --migration-file-language=sql --migration-filename-format=utc",
    "db:migrate:status": "echo 'Use: docker-compose exec postgres psql -U postgres -d thesaurum -c \"SELECT name, run_on FROM pgmigrations ORDER BY run_on;\"'",
    "db:generate:zapatos": "PGHOST=${PGHOST:-postgres} PGPORT=${PGPORT:-5432} PGUSER=${PGUSER:-postgres} PGPASSWORD=${PGPASSWORD:-postgres} PGDATABASE=${PGDATABASE:-thesaurum} zapatos",
    "db:generate:zod": "pgzod --pghost=${PGHOST:-postgres} --pgport=${PGPORT:-5432} --pguser=${PGUSER:-postgres} --pgpassword=${PGPASSWORD:-postgres} --pgdatabase=${PGDATABASE:-thesaurum} --schema=public --output=src/schemas/pgzod --strategy=readwrite --customZodTypes 'timestamp=z.coerce.date()'",
    "db:generate": "npm run db:generate:zapatos && npm run db:generate:zod"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^8.1.0",
    "express": "^4.18.2",
    "node-pg-migrate": "^8.0.3",
    "pg": "^8.16.3",
    "swagger-ui-express": "^5.0.0",
    "zapatos": "^6.6.1",
    "zod": "^4.0.0",
    "zod-openapi": "^5.4.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.5",
    "@types/swagger-ui-express": "^4.1.6",
    "pgzod": "^3.3.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
