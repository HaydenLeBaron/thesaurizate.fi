{
    "openapi": "3.1.0",
    "info": {
        "title": "Thesaurum API",
        "version": "1.0.0",
        "description": "API for managing greetings in different languages"
    },
    "servers": [
        {
            "url": "http://localhost:3000",
            "description": "Development server"
        }
    ],
    "paths": {
        "/greetings": {
            "get": {
                "summary": "Get all greetings",
                "tags": [
                    "Greetings"
                ],
                "responses": {
                    "200": {
                        "description": "List of all greetings",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Greeting"
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "summary": "Create a new greeting",
                "tags": [
                    "Greetings"
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/CreateGreeting"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created greeting",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Greeting"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/greetings/{language}": {
            "get": {
                "summary": "Get greetings by language",
                "tags": [
                    "Greetings"
                ],
                "parameters": [
                    {
                        "in": "path",
                        "name": "language",
                        "schema": {
                            "description": "Language code",
                            "example": "en",
                            "type": "string",
                            "enum": [
                                "de",
                                "en",
                                "es",
                                "fr",
                                "it",
                                "ja",
                                "ko",
                                "pt",
                                "ru",
                                "zh"
                            ]
                        },
                        "required": true,
                        "description": "Language code"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "List of greetings in the specified language",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Greeting"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/greetings/{id}": {
            "delete": {
                "summary": "Delete a greeting by ID",
                "tags": [
                    "Greetings"
                ],
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "schema": {
                            "description": "Greeting ID",
                            "example": 1,
                            "type": "integer",
                            "exclusiveMinimum": 0,
                            "maximum": 9007199254740991
                        },
                        "required": true,
                        "description": "Greeting ID"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Deleted greeting",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Greeting"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Greeting not found"
                    }
                }
            }
        },
        "/testEndpoint": {
            "get": {
                "summary": "Get all test rows",
                "description": "Retrieves a list of all rows from the test table.",
                "tags": [
                    "Test"
                ],
                "responses": {
                    "200": {
                        "description": "A list of test rows",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/TestEndpoint"
                                    }
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        },
        "/health": {
            "get": {
                "summary": "Health check",
                "tags": [
                    "System"
                ],
                "responses": {
                    "200": {
                        "description": "Service is healthy",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "status": {
                                            "example": "ok",
                                            "type": "string"
                                        }
                                    },
                                    "required": [
                                        "status"
                                    ],
                                    "additionalProperties": false
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "CreateGreeting": {
                "type": "object",
                "properties": {
                    "language": {
                        "description": "Language code",
                        "example": "en",
                        "type": "string",
                        "enum": [
                            "de",
                            "en",
                            "es",
                            "fr",
                            "it",
                            "ja",
                            "ko",
                            "pt",
                            "ru",
                            "zh"
                        ]
                    },
                    "greeting": {
                        "description": "The greeting text",
                        "example": "Hello",
                        "type": "string"
                    },
                    "description": {
                        "description": "Optional description of the greeting",
                        "example": "A friendly greeting",
                        "anyOf": [
                            {
                                "type": "string"
                            },
                            {
                                "type": "null"
                            }
                        ]
                    }
                },
                "required": [
                    "language",
                    "greeting"
                ]
            },
            "Greeting": {
                "type": "object",
                "properties": {
                    "id": {
                        "description": "Unique identifier for the greeting",
                        "example": 1,
                        "type": "integer",
                        "minimum": -9007199254740991,
                        "maximum": 9007199254740991
                    },
                    "language": {
                        "description": "Language code",
                        "example": "en",
                        "type": "string",
                        "enum": [
                            "de",
                            "en",
                            "es",
                            "fr",
                            "it",
                            "ja",
                            "ko",
                            "pt",
                            "ru",
                            "zh"
                        ]
                    },
                    "greeting": {
                        "description": "The greeting text",
                        "example": "Hello",
                        "type": "string"
                    },
                    "created_at": {
                        "description": "Creation timestamp",
                        "example": "2025-10-06T00:00:00.000Z",
                        "type": "string"
                    },
                    "description": {
                        "description": "Optional description of the greeting",
                        "example": "A friendly greeting",
                        "anyOf": [
                            {
                                "type": "string"
                            },
                            {
                                "type": "null"
                            }
                        ]
                    }
                },
                "required": [
                    "id",
                    "language",
                    "greeting",
                    "created_at"
                ],
                "additionalProperties": false
            },
            "TestEndpoint": {
                "type": "object",
                "properties": {
                    "id": {
                        "description": "Unique identifier for the test row",
                        "example": 1,
                        "type": "integer",
                        "minimum": -9007199254740991,
                        "maximum": 9007199254740991
                    },
                    "name": {
                        "description": "The name value",
                        "example": "Test Name",
                        "type": "string"
                    }
                },
                "required": [
                    "id",
                    "name"
                ],
                "additionalProperties": false
            }
        }
    }
}